<div class="c-education c-resume__section">
  <h3 class="c-education__title c-resume__section-title">{{ education.title }}</h3>
  <div class="c-education__body c-resume__section-body">
    <div class="c-education__details">
      <h4 class="c-education__provider">{{ education.institution }}</h4>
      <span class="c-education__dates">{{ education.date_started|date('F Y') }} &ndash; {{ education.date_ended ? education.date_ended|date('F Y') : 'present' }}</span>
    </div>
    {% if education.description %}
    <div class="c-education__description">
      {% if education.description is iterable %}
        <ul>
        {% for item in education.description %}
          <li>{{ item }}</li>
        {% endfor %}
        </ul>
      {% else %}
        <p>{{ education.description }}</p>
      {% endif %}
    </div>
    {% endif %}
  </div>
</div>
